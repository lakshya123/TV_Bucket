    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:padding="30dp"
    android:background="#dbdbda">

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
